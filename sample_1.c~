#include <avr/io.h> 
#include <avr/interrupt.h> 
#include <util/delay.h> 
volatile char key_pressed = 0; 

// ãÇÊÑíÓ ÕİÍå ˜áíÏ 4x4 
/*
char keypad[4][4] = { 
    {'1', '2', '3', 'A'}, 
    {'4', '5', '6', 'B'}, 
    {'7', '8', '9', 'C'}, 
    {'*', '0', '#', 'D'} 
}; 
*/

char keypad[4][4] = { 
    {'1', '2',  '3', '12'}, 
    {'4', '5',  '6', '13'}, 
    {'7', '8',  '9', '14'}, 
    {'10','0', '11', '15'} 
}; 

// æÑÊåÇ æ íäåÇ ÑÇ ÈÑÇí ÕİÍå ˜áíÏ í˜ÑÈäÏí ãí˜äíã 
void keypad_init(void) { 
    // ÑÏíİåÇ (Rows) Èå ÚäæÇä ÎÑæÌí 
    DDRD = 0x0F; PORTD = 0xF0;  // İÚÇá ˜ÑÏä ãŞÇæãÊåÇí æá Â ÏÇÎáí ÈÑÇí ÓÊæäåÇ (Columns) 
    
    // İÚÇá ˜ÑÏä æŞİå ÎÇÑÌí INT0 ÈÑÇí áÈå Çííä 
    MCUCR |= (1 << ISC01);      // ISC01 = 1 æ ISC00 = 0 (áÈå Çííä) 
                            
    GICR |= (1 << INT0);        // İÚÇá ˜ÑÏä INT0 
    
    // İÚÇá ˜ÑÏä æŞİååÇí Úãæãí 
    sei(); } 
    
    // ÑæÊíä æŞİå ÈÑÇí 
    INT0 ISR(INT0_vect) { // ÇÓ˜ä ÕİÍå ˜áíÏ ÈÑÇí ÊÔÎíÕ ˜áíÏ İÔÑÏå ÔÏå 

    for (uint8_t row = 0; row < 4; row++) { // ÊäÙíã ÑÏíİåÇ Èå ÚäæÇä ÎÑæÌí æ ÓÊæäåÇ Èå ÚäæÇä æÑæÏí 
        DDRD = (1 << row); 
        PORTD = ~(1 << row);
         _delay_us(5);
          // ÒãÇä ÈÑÇí ÊËÈíÊ 
          for (uint8_t col = 0; col < 4; col++) { 
            if (!(PIND & (1 << (col + 4)))) { // ÈÑÑÓí Çíä˜å ÓÊæä İÔÑÏå ÔÏå ÇÓÊ íÇ äå 
                key_pressed = keypad[row][col]; 
                return; 
            } 
          } 
    } 
} 
// ÊÇÈÚ ÈÑÇí ÈÇÒÑÏÇäÏä ˜áíÏ İÔÑÏå ÔÏå 
char get_key(void) { 
    char key = key_pressed; 
    key_pressed = 0; // ÈÇÒäÔÇäí ãÊÛíÑ Ó ÇÒ ÎæÇäÏä 
    return key; 
} 

int main(void) { 
    keypad_init(); 
    while (1) { 
        char key = get_key(); 
        if (key) { 
            // ÑÏÇÒÔ ˜áíÏ İÔÑÏå ÔÏå // ÇíäÌÇ ãíÊæÇäíÏ ÇÒ key ÈÑÇí ÇäÌÇã ÚãáíÇÊ ÏÑ ÍáŞå ÇÕáí ÇÓÊİÇÏå ˜äíÏ } // ÓÇíÑ ˜ÏåÇí ÍáŞå ÇÕáí // ... 
        
        } return 0; 
    }
}